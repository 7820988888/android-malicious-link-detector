<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000052">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Heading Text -->
        <TextView
            android:layout_width="805dp"
            android:layout_height="141dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="CHOOSE SECURE\n WEBSITE"
            android:textColor="#F0F0F0"
            android:textSize="30dp"
            android:textStyle="bold" />

        <!-- Zomato Button -->
        <Button
            android:id="@+id/btnZomato"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#E23744"
            android:elevation="4dp"
            android:text="🍽️ Zomato"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Swiggy Button -->
        <Button
            android:id="@+id/btnSwiggy"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FC8019"
            android:elevation="4dp"
            android:text="🥘 Swiggy"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Blinkit Button -->
        <Button
            android:id="@+id/btnBlinkit"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FFFF00"
            android:elevation="4dp"
            android:text="🛒 Blinkit"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Zepto Button -->
        <Button
            android:id="@+id/btnZepto"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#801E93"
            android:elevation="4dp"
            android:text="🚚 Zepto"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
